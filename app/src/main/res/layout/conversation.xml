<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:src="@mipmap/black_back"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="微风科技"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="45dp"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:src="@mipmap/test01"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="数码相机维系"
                android:textSize="16sp"
                android:paddingLeft="1dp"
                android:gravity="bottom"
                android:paddingBottom="11dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="￥50"
                    android:textSize="17sp"
                    android:paddingLeft="1dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/red"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="发送"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#D85434"
                    android:background="@drawable/shape_rect_text"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/horizontal_light_thin_divider"/>

    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>