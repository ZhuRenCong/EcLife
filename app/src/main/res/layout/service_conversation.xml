<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:src="@mipmap/black_back"
            android:padding="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="在线联系"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginRight="40dp"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="客服"
            android:textSize="18sp"
            android:gravity="bottom|right"
            android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8099760"
                android:gravity="bottom"
                android:textSize="18sp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="号为您服务"
                android:gravity="bottom"
                android:textSize="18sp"
                android:paddingBottom="5dp"/>

            <ImageView
                android:id="@+id/change_contact"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:src="@mipmap/change_contact"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/good"
                android:layout_width="60dp"
                android:layout_marginLeft="40dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/good_image"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/good1"
                    android:padding="3dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="好评"
                    android:textColor="@color/red"
                    android:paddingBottom="3dp"
                    android:gravity="bottom"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bad"
                android:layout_width="60dp"
                android:layout_marginLeft="28dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bad_image"
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/not_good1"
                    android:layout_marginTop="3dp"
                    android:padding="3dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="差评"
                    android:paddingBottom="3dp"
                    android:gravity="bottom"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <FrameLayout
        android:id="@+id/rong_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>