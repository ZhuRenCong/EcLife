<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:src="@mipmap/black_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="联系我们"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/contact_number"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="客服电话"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15767084264"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/youxiang"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="官方邮箱"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2465845882@qq.com"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/online_contact"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="在线联系"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@mipmap/right_go"
            android:padding="15dp"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <LinearLayout
        android:id="@+id/idea_to_us"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="建议反馈"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"/>

        <ImageView
            android:id="@+id/mark"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@mipmap/back_down"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_shallow"/>

    <EditText
        android:id="@+id/idea_content"
        android:hint="输入反馈信息"
        android:textSize="14sp"
        android:paddingLeft="40dp"
        android:visibility="invisible"
        android:lines="4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交"
        android:visibility="invisible"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:layout_marginTop="150dp"
        android:background="@drawable/publish_button"/>

</LinearLayout>