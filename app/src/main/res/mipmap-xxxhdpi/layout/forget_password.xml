<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_login_bg">
    <!--工作室logo-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_login_logo"/>

    <!--帐号和密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="15dp">
        <!--帐号-->
        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_et_forget_pwd"
            android:inputType="number"
            android:padding="5dp"
            android:hint="手机号"
            android:textColorHint="#ffffff"
            android:textColor="#D3A97D"
            android:textCursorDrawable="@drawable/shape_cursor_login"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="7dp">

        <!--登录按钮-->
        <EditText
            android:id="@+id/verification_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="@drawable/shape_et_forget_pwd"
            android:textColorHint="#ffffff"
            android:paddingLeft="9dp"
            android:textCursorDrawable="@drawable/shape_cursor_login"
            android:layout_marginRight="3dp"
            android:textSize="18sp"
            android:hint="验证码"/>
        <!--注册按钮-->
        <Button
            android:id="@+id/verify"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/selector_login_btn"
            android:textSize="18sp"
            android:textColor="#F6EEE7"
            android:text="验证"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"
            android:textColor="#F6EEE7"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="密码登录" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="登陆"
        android:layout_marginTop="75dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/selector_login_btn"/>

    <TextView
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:text="about us"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="18sp"/>


</LinearLayout>