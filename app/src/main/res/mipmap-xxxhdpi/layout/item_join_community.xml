<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--我创建的社区的item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_join_community_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/popular_community_01"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">
            <!--社区的名字-->
            <TextView
                android:id="@+id/tv_join_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_join_community_icon"
                android:textSize="12sp"
                android:text="万达广场"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_join_group_community_count"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@mipmap/icon_group"
                    android:drawablePadding="3dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="1026"/>

                <TextView
                    android:id="@+id/tv_join_message_community"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:drawableLeft="@mipmap/icon_sms_black"
                    android:drawablePadding="3dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="1026"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>